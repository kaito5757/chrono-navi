{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    // 「createCaller」の型注釈エラーを回避するために「declaration」を「false」に設定
    "declaration": false,
    "declarationMap": false
  },
  "include": ["."],
  "exclude": ["node_modules", ".turbo"]
}
